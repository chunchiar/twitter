<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
        <div class="panel-image hide-panel-body">
          <img src="/ip7.jpg" class="panel-image-preview">
        </div>
        <div class="panel-footer text-center">
          <div class="row">
            <div class="col-sm-2"><img src="/superman.jpg" class="rounded-img" height="50px" width="50px"></div>
            <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
            <div class="col-sm-12" style="margin-top: 10px;">
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                <h6 style="color: #0084b4; font-size: 150%;"><%= current_user.posts.count %></h6>
              </div>
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS</br>
                <h6 style="color: #0084b4; font-size: 150%;"><%= current_user.followers.count %></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Trends</h5>
        <a href="">#Trend #1</a><br>
        <span style="color: grey;">31k Posts</span><br>
        <a href="">#Trend #2</a><br>
        <span style="color: grey;">25k Posts</span><br>
        <a href="">#Trend #3</a><br>
        <span style="color: grey;">16k Posts</span><br>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <%= render '/components/post_form' %>
    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <img src="/superman.jpg" class="rounded-img" height="50px" width="50px"></img>
        </div>
        <div class="col-sm-11">
          <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
          <p class="post-content"><%= @p.content %></p>
        </div>
        <div class="col-sm-12">
          <div class="post-links">
            <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
            <a href="">View Conversation</a>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
          <center><img src="/twitter-icon.png" height="25px" width="25px"></img>
            <a href="#top"><p class="opacitiy: 0.7; color: grey;">Back to Top<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
          </div>
        </div>
      </div>
  </div>
